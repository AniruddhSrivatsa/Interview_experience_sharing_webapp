<%- include("partials/header") -%>
<form action="/compose" method="post">
    <div class="form-group">
    <label for="company">Company Name:</label>
    <input type="text" class="form-control" name="company" placeholder="enter the company name"><br>
    <label for="post">Job position:</label>
    <input type="text" class="form-control" name="post" placeholder="job position"><br>
    <label for="review">Review:</label>
    <input type="text" class="form-control" name="review" placeholder="your interview experience"><br>
    <label for="topics">Major topics covered:</label>
    <input type="text" class="form-control" name="topics" placeholder="topics covered"><br>
    <label for="describe">Description:</label>
    <textarea name="describe" class="form-control" id="taa" placeholder="Brief description of the interview"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Submit</button>
   
</form>


